<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hdlmx.devops.dao.ProjectDao">

    <insert id="save">
       insert into project(name,namespace,createTime,ownid) values (#{name},#{namespace},#{createTime},#{ownId})
    </insert>
    <select id="existNewNamespace" resultType="int">
        select count(*) from project where namespace=#{namespace}
    </select>
    <select id="list" resultType="cn.hdlmx.devops.pojo.Project">
        select * from project where ownid='1001'
        <if test="projectName!=null">and name like CONCAT('%',#{projectName},'%')</if>
    </select>
</mapper>